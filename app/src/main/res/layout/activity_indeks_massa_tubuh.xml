<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndeksMassaTubuhActivity"
    android:background="@color/light_green">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="@string/kembali_ke_menu_utama"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_indeks_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Isi Form Berikut Untuk Cek Status Gizi mu!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_back"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_indeks_berat_badan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_indeks_judul"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">
            <TextView
                android:id="@+id/tv_indeks_berat_badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Berat Badan(kg) : "
                android:textColor="@color/black"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/et_indeks_berat_badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:hint="000"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="50sp"
                android:maxLength="3" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_indeks_tinggi_badan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16sp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_indeks_judul"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:padding="12dp">
            <TextView
                android:id="@+id/tv_indeks_tinggi_badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Tinggi Badan(cm) : "
                android:textColor="@color/black"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/et_indeks_tinggi_badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:hint="000"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="50sp"
                android:maxLength="3" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/btn_indeks_cek_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/light_blue"
        android:fontFamily="@font/roboto_bold"
        android:text="Cek Status Gizi Ku"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_indeks_berat_badan" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_indeks_cek_status">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Status Gizi ku"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Indeks Massa Tubuh(IMT) :"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_indeks_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Kurus" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
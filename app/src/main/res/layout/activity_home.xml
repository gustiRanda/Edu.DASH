<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <RelativeLayout
        android:id="@+id/materi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_main"
        app:layout_constraintStart_toStartOf="@id/iv_main"
        app:layout_constraintEnd_toEndOf="@id/iv_main"
        android:background="@drawable/list_menu_background"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/iv_materi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_pengertian"/>

        <TextView
            android:id="@+id/tv_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_materi"
            android:layout_alignBottom="@id/iv_materi"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_materi"
            android:fontFamily="@font/roboto_bold"
            android:text="Materi"
            android:textColor="@color/donker"
            android:textSize="28sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/status_gizi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/materi"
        app:layout_constraintStart_toStartOf="@id/materi"
        app:layout_constraintEnd_toEndOf="@id/materi"
        android:background="@drawable/list_menu_background"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/iv_status_gizi"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/status"/>

        <TextView
            android:id="@+id/tv_status_gizi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_status_gizi"
            android:layout_alignBottom="@id/iv_status_gizi"
            android:gravity="center_vertical"
            android:text="Status Gizi"
            android:layout_toEndOf="@id/iv_status_gizi"
            android:layout_marginStart="10dp"
            android:textColor="@color/donker"
            android:fontFamily="@font/roboto_bold"
            android:textSize="28sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kuis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/status_gizi"
        app:layout_constraintStart_toStartOf="@id/status_gizi"
        app:layout_constraintEnd_toEndOf="@id/status_gizi"
        android:background="@drawable/list_menu_background"
        android:layout_margin="10dp"
        android:paddingTop="15dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/iv_kuis"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/quiz"/>

        <TextView
            android:id="@+id/tv_kuis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_kuis"
            android:layout_alignBottom="@id/iv_kuis"
            android:gravity="center_vertical"
            android:text="Kuis"
            android:layout_toEndOf="@id/iv_kuis"
            android:layout_marginStart="10dp"
            android:textColor="@color/donker"
            android:fontFamily="@font/roboto_bold"
            android:textSize="28sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
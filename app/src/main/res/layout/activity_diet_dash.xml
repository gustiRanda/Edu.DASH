<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="20dp"
    tools:context=".DietDashActivity">


    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="@string/kembali_ke_menu_utama"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_judul"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/detail_judul_background"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_back"
        tools:text="PENGERTIAN" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/detail_content_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_judul"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_judul"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_judul">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_detail_foto"
                android:layout_width="250dp"
                android:layout_height="120dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/grey"
                android:textSize="18sp"
                tools:text="Penyebab Yang Tidak Dapat Dikendalikan"/>

            <ImageView
                android:id="@+id/iv_content_foto"
                android:layout_width="330dp"
                android:layout_height="330dp"
                tools:src="@drawable/produk_tinggi_natrium" />

            <ImageView
                android:id="@+id/iv_content_foto2"
                android:layout_width="330dp"
                android:layout_height="250dp"
                tools:src="@drawable/produk_rendah_natrium"/>

            <TextView
                android:id="@+id/tv_detail_content2"
                tools:text="POLA DIET DASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pola_diet_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/table_list_item" />

            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_detail_content3"
                tools:text="POLA DIET DASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pola_diet_dash2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/table_list_item2" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_detail_content4"
                tools:text="JENIS MAKANAN YANG DIANJURKAN DAN TIDAK DIANJURKAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_jenis_makanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/table_list_item3" />

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>